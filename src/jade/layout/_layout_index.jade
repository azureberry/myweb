doctype html
html
  head
    meta(charset='UTF-8')

    block vars
      - var htmlroot = './'

    block title

    block meta
      include ../common/_head_meta
    block style
      include ../common/_head_style


  body
    include ../mixins/_all_mixin

    div.container

      //Header Nav
      div.row
        nav.navbar.navbar-default.navbar-fixed-top
          div.navbar-header
            button.navbar-toggle(data-toggle="collapse" data-target="#collapse-target")
                      span.sr-only Toggle navigation
                      span.icon-bar
                      span.icon-bar
                      span.icon-bar

            a.navbar-brand(href ="#{htmlroot}index.html")
              include ../common/_header_title

          div.collapse.navbar-collapse#collapse-target
            ul.nav.navbar-nav
              include ../common/_header_nav

      div.row.main-row
        //Header Carousel
        div#myCarousel.carousel.slide(data-ride="carousel")
          block carousel_items

          a.left.carousel-control(href="#myCarousel" role="button" data-slide="prev")
            span.icon-prev(aria-hidden="true")
            span.sr-only Previous
          a.right.carousel-control(href="#myCarousel" role="button" data-slide="next")
            span.icon-next(aria-hidden="true")
            span.sr-only Next


        //Main Content Section
        div.col-md-5
          block maincontents1

        div.col-md-4
          block maincontents2

        div.col-md-3
          block maincontents3



      //Footer
      footer.row
        div
          hr
          include ../common/_footer_copy

      include ../common/_goto_top


    block bottom_scripts
      include ../common/_bottom_scripts
